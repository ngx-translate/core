{
  "name": "ng2-translate-base",
  "description": "An implementation of angular translate for Angular 2",
  "private": true,
  "scripts": {
    "git-cz": "git-cz",
    "build": "ngm build -p src",
    "lint": "tslint \"**/*.ts\" -c tslint.json -e \"node_modules/**\" -e \"dist/**\" -e \"temp/**\"",
    "pretest": "npm run lint",
    "test": "karma start",
    "test-watch": "karma start --singleRun=false --autoWatch=true",
    "commit": "run-s lint prepublish test git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ocombe/ng2-translate.git"
  },
  "keywords": [
    "angular",
    "angular2",
    "translate",
    "i18n"
  ],
  "author": "Olivier Combe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ocombe/ng2-translate/issues"
  },
  "main": "bundles/ng2-translate.umd.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "homepage": "https://github.com/ocombe/ng2-translate",
  "peerDependencies": {
    "@angular/core": "^2.0.0",
    "@angular/http": "^2.0.0"
  },
  "devDependencies": {
    "@angular/common": "2.1.2",
    "@angular/compiler": "2.1.2",
    "@angular/compiler-cli": "2.1.2",
    "@angular/core": "2.1.2",
    "@angular/http": "2.1.2",
    "@angular/platform-browser": "2.1.2",
    "@angular/platform-browser-dynamic": "2.1.2",
    "@angular/platform-server": "2.1.2",
    "@types/hammerjs": "2.0.33",
    "@types/jasmine": "2.5.38",
    "@types/node": "6.0.48",
    "awesome-typescript-loader": "3.0.0-beta.5",
    "codelyzer": "1.0.0-beta.3",
    "commitizen": "2.8.6",
    "core-js": "2.4.1",
    "cz-conventional-changelog": "1.2.0",
    "istanbul-instrumenter-loader": "0.2.0",
    "jasmine-core": "2.5.2",
    "karma": "1.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.0.2",
    "karma-mocha-reporter": "^2.1.0",
    "karma-remap-coverage": "~0.1.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "loader-utils": "~0.2.16",
    "npm-run-all": "3.1.1",
    "ngm-cli": "0.3.2",
    "reflect-metadata": "0.1.8",
    "rxjs": "5.0.0-beta.12",
    "semantic-release": "4.3.5",
    "source-map-loader": "0.1.5",
    "ts-helpers": "1.1.2",
    "tslint": "3.15.1",
    "typescript": "2.0.10",
    "webpack": "2.1.0-beta.25",
    "zone.js": "0.6.26"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
